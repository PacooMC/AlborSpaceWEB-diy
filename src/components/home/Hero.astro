---
import { ArrowRight } from 'lucide-astro';
import { hero } from '../../content/home';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden ultra-dark-hero">
  <!-- PERFECTLY centered content with full responsive design -->
  <div class="w-full h-full flex items-center justify-center py-20 sm:py-24 md:py-32">
    <div class="container-custom">
      <div class="text-center max-w-5xl mx-auto reveal-element">
        <div class="space-y-6 sm:space-y-8 md:space-y-10">
          <!-- Enhanced responsive badge -->
          <div class="flex justify-center mb-6 sm:mb-8">
            <div class="inline-block px-3 sm:px-4 py-2 rounded-full bg-[#000012]/80 backdrop-blur-sm border border-white/10 text-white/70 text-xs sm:text-sm tracking-widest uppercase ultra-dark-badge">
              <div class="flex items-center justify-center space-x-2">
                <div class="w-1.5 h-1.5 bg-[#FF6B00]/60 rounded-full animate-pulse"></div>
                <span class="hidden sm:inline">Advancing Space Communication</span>
                <span class="sm:hidden">Space Communication</span>
                <div class="w-1.5 h-1.5 bg-[#FF6B00]/60 rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
              </div>
            </div>
          </div>
          
          <!-- Fully responsive hero title -->
          <div class="w-full flex justify-center">
            <h1 class="heading-xl hero-title">
              <div class="logo-style group">
                <span class="text-white inline-block hero-text-1 transition-all duration-500 relative group-hover:text-shadow-ultra-dark">
                  ALBOR
                </span>
                <span class="text-white/30 inline-block ml-2 sm:ml-4 hero-text-2 transition-colors duration-500 group-hover:text-white/60">SPACE</span>
              </div>
            </h1>
          </div>
          
          <!-- Responsive description -->
          <div class="flex justify-center">
            <p class="text-body text-white/60 max-w-xs sm:max-w-md lg:max-w-lg hero-description text-center">
              {hero.description}
            </p>
          </div>
        </div>

        <!-- Responsive CTA button -->
        <div class="pt-8 sm:pt-10 md:pt-12 flex justify-center">
          <a href="#technology" class="hero-cta-button group relative overflow-hidden">
            <div class="hero-cta-bg"></div>
            <div class="hero-cta-border"></div>
            <div class="hero-cta-content">
              <span class="relative z-10 text-sm sm:text-base">{hero.cta}</span>
              <ArrowRight class="w-4 h-4 sm:w-5 sm:h-5 ml-2 transition-all duration-500 ease-out transform group-hover:translate-x-2 group-hover:text-[#FF6B00] relative z-10" />
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Responsive floating particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="ultra-dark-particle ultra-dark-particle-1"></div>
    <div class="ultra-dark-particle ultra-dark-particle-2"></div>
    <div class="ultra-dark-particle ultra-dark-particle-3 hidden sm:block"></div>
    <div class="ultra-dark-particle ultra-dark-particle-4 hidden md:block"></div>
  </div>
</section>

<style>
  /* Responsive hero section */
  .ultra-dark-hero {
    background: transparent;
    position: relative;
  }

  .ultra-dark-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 60% 40% at center bottom, 
      rgba(0, 0, 36, 0.15) 0%, 
      rgba(0, 0, 24, 0.1) 40%, 
      transparent 80%);
    pointer-events: none;
  }

  /* Responsive badge */
  .ultra-dark-badge {
    backdrop-filter: blur(20px);
    box-shadow: 
      0 0 15px rgba(0, 0, 18, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 107, 0, 0.15);
  }

  /* Responsive hero title */
  .hero-title {
    position: relative;
    transform: translateZ(0);
    letter-spacing: 0.1em;
    line-height: 1.1;
    text-align: center;
    text-shadow: 
      0 0 20px rgba(0, 0, 18, 0.7),
      0 0 40px rgba(0, 0, 24, 0.5);
  }

  .logo-style {
    display: inline-block;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: center;
  }

  .group:hover .group-hover\:text-shadow-ultra-dark {
    text-shadow: 
      0 0 20px rgba(255, 107, 0, 0.6),
      0 0 40px rgba(255, 107, 0, 0.4),
      0 0 60px rgba(255, 107, 0, 0.2);
  }

  /* Responsive text animations */
  .hero-text-1 {
    animation: textRevealUltraDark 1.5s cubic-bezier(0.77, 0, 0.175, 1) forwards;
    transform: translateX(-25%);
    opacity: 0;
  }

  .hero-text-2 {
    animation: textRevealUltraDark 1.5s cubic-bezier(0.77, 0, 0.175, 1) 0.3s forwards;
    transform: translateX(25%);
    opacity: 0;
  }

  .hero-description {
    animation: fadeInUltraDark 1.5s ease 0.8s forwards;
    opacity: 0;
  }

  @keyframes textRevealUltraDark {
    0% { 
      transform: translateX(25%); 
      opacity: 0; 
    }
    100% { 
      transform: translateX(0); 
      opacity: 1; 
    }
  }

  @keyframes fadeInUltraDark {
    0% { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* Responsive CTA button */
  .hero-cta-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.5rem;
    background: transparent;
    border-radius: 0.5rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: white;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUltraDark 1.5s ease 1s forwards;
    opacity: 0;
    backdrop-filter: blur(20px);
  }

  @media (min-width: 640px) {
    .hero-cta-button {
      padding: 1rem 2.5rem;
    }
  }

  .hero-cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(0, 0, 18, 0.6) 0%, 
      rgba(0, 0, 24, 0.4) 50%, 
      rgba(0, 0, 30, 0.5) 100%);
    border-radius: 0.5rem;
    transition: all 0.5s ease;
    z-index: 1;
  }

  .hero-cta-border {
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    padding: 1px;
    background: linear-gradient(135deg, 
      rgba(255, 107, 0, 0.3) 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      rgba(255, 107, 0, 0.3) 100%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    transition: all 0.5s ease;
    z-index: 0;
  }

  .hero-cta-content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .hero-cta-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 
      0 15px 35px rgba(0, 0, 18, 0.6),
      0 5px 15px rgba(255, 107, 0, 0.2);
  }

  .hero-cta-button:hover .hero-cta-bg {
    background: linear-gradient(135deg, 
      rgba(255, 107, 0, 0.15) 0%, 
      rgba(0, 0, 24, 0.4) 50%, 
      rgba(255, 107, 0, 0.15) 100%);
  }

  .hero-cta-button:hover .hero-cta-border {
    background: linear-gradient(135deg, 
      rgba(255, 107, 0, 0.7) 0%, 
      rgba(255, 255, 255, 0.3) 50%, 
      rgba(255, 107, 0, 0.7) 100%);
  }

  /* Responsive floating particles */
  .ultra-dark-particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: radial-gradient(circle, rgba(255, 107, 0, 0.8) 0%, transparent 70%);
    border-radius: 50%;
    animation: floatUltraDarkParticle 15s ease-in-out infinite;
  }

  @media (min-width: 640px) {
    .ultra-dark-particle {
      width: 3px;
      height: 3px;
    }
  }

  .ultra-dark-particle-1 {
    top: 30%;
    left: 20%;
    animation-delay: 0s;
    animation-duration: 12s;
  }

  .ultra-dark-particle-2 {
    top: 70%;
    left: 80%;
    animation-delay: 4s;
    animation-duration: 16s;
  }

  .ultra-dark-particle-3 {
    top: 45%;
    left: 75%;
    animation-delay: 8s;
    animation-duration: 14s;
  }

  .ultra-dark-particle-4 {
    top: 65%;
    left: 25%;
    animation-delay: 12s;
    animation-duration: 18s;
  }

  @keyframes floatUltraDarkParticle {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.3;
    }
    33% {
      transform: translateY(-30px) scale(1.4);
      opacity: 0.7;
    }
    66% {
      transform: translateY(20px) scale(0.8);
      opacity: 0.5;
    }
  }

  /* Responsive text size adjustments */
  @media (max-width: 640px) {
    .hero-title {
      text-shadow: 
        0 0 15px rgba(0, 0, 18, 0.8),
        0 0 30px rgba(0, 0, 24, 0.6);
    }
  }
</style>