---
import { ArrowRight } from 'lucide-astro';
import { hero } from '../../content/home';
---

<section class="relative h-screen flex items-center justify-center overflow-hidden hero-navy-space">
  <!-- PERFECTLY centered content -->
  <div class="w-full h-full flex items-center justify-center">
    <div class="w-full max-w-6xl mx-auto px-6">
      <div class="text-center space-y-8 reveal-element">
        <div class="space-y-6">
          <!-- Enhanced navy space badge -->
          <div class="flex justify-center mb-6">
            <div class="inline-block px-4 py-2 rounded-full bg-slate-900/60 backdrop-blur-sm border border-blue-500/20 text-blue-200/80 text-xs tracking-widest uppercase navy-space-badge">
              <div class="flex items-center justify-center space-x-2">
                <div class="w-1.5 h-1.5 bg-blue-400/60 rounded-full animate-pulse"></div>
                <span>Advancing Space Communication</span>
                <div class="w-1.5 h-1.5 bg-blue-400/60 rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
              </div>
            </div>
          </div>
          
          <!-- PERFECTLY centered hero title -->
          <div class="w-full flex justify-center">
            <h1 class="text-5xl sm:text-6xl md:text-7xl xl:text-8xl font-light tracking-wider leading-none hero-title">
              <div class="logo-style group">
                <span class="text-white inline-block hero-text-1 transition-all duration-500 group-hover:text-shadow-navy relative">
                  ALBOR
                  <!-- Subtle navy underline -->
                  <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-blue-400/40 to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-700"></div>
                </span>
                <span class="text-white/30 inline-block ml-4 hero-text-2 transition-colors duration-500 group-hover:text-blue-200/60">SPACE</span>
              </div>
            </h1>
          </div>
          
          <!-- Description -->
          <div class="flex justify-center">
            <p class="text-sm md:text-base text-blue-100/60 max-w-md hero-description leading-relaxed mt-8 tracking-wide font-light text-center">
              {hero.description}
            </p>
          </div>
        </div>

        <!-- CTA button -->
        <div class="pt-10 flex justify-center">
          <a href="#technology" class="hero-cta-button group relative overflow-hidden">
            <div class="hero-cta-bg"></div>
            <div class="hero-cta-border"></div>
            <div class="hero-cta-content">
              <span class="relative z-10">{hero.cta}</span>
              <ArrowRight class="w-5 h-5 ml-2 transition-all duration-500 ease-out transform group-hover:translate-x-2 group-hover:scale-110 relative z-10" />
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced floating particles with navy theme -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="navy-particle navy-particle-1"></div>
    <div class="navy-particle navy-particle-2"></div>
    <div class="navy-particle navy-particle-3"></div>
    <div class="navy-particle navy-particle-4"></div>
  </div>
</section>

<style>
  /* Beautiful navy space hero section */
  .hero-navy-space {
    background: transparent;
  }

  /* Enhanced navy space badge */
  .navy-space-badge {
    backdrop-filter: blur(20px);
    box-shadow: 
      0 0 20px rgba(59, 130, 246, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    animation: navyBadgeGlow 4s ease-in-out infinite;
  }

  @keyframes navyBadgeGlow {
    0%, 100% { 
      box-shadow: 
        0 0 20px rgba(59, 130, 246, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
    50% { 
      box-shadow: 
        0 0 30px rgba(59, 130, 246, 0.25),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
  }

  /* Hero title with PERFECT centering and navy effects */
  .hero-title {
    position: relative;
    transform: translateZ(0);
    letter-spacing: 0.1em;
    line-height: 1.1;
    text-shadow: 
      0 0 30px rgba(59, 130, 246, 0.1),
      0 0 60px rgba(30, 41, 59, 0.2);
    text-align: center;
  }

  .logo-style {
    display: inline-block;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: center;
  }

  .group:hover .group-hover\:text-shadow-navy {
    text-shadow: 
      0 0 20px rgba(59, 130, 246, 0.4),
      0 0 40px rgba(59, 130, 246, 0.2),
      0 0 60px rgba(30, 41, 59, 0.3);
  }

  /* Text animations with navy theme */
  .hero-text-1 {
    animation: textRevealNavy 1.5s cubic-bezier(0.77, 0, 0.175, 1) forwards;
    transform: translateX(-25%);
    opacity: 0;
  }

  .hero-text-2 {
    animation: textRevealNavy 1.5s cubic-bezier(0.77, 0, 0.175, 1) 0.3s forwards;
    transform: translateX(25%);
    opacity: 0;
  }

  .hero-description {
    animation: fadeInNavy 1.5s ease 0.8s forwards;
    opacity: 0;
  }

  @keyframes textRevealNavy {
    0% { 
      transform: translateX(25%); 
      opacity: 0; 
    }
    100% { 
      transform: translateX(0); 
      opacity: 1; 
    }
  }

  @keyframes fadeInNavy {
    0% { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* CTA button with navy space theme */
  .hero-cta-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    background: transparent;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: white;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInNavy 1.5s ease 1s forwards;
    opacity: 0;
    backdrop-filter: blur(20px);
  }

  .hero-cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(30, 41, 59, 0.8) 0%, 
      rgba(51, 65, 85, 0.6) 50%, 
      rgba(30, 41, 59, 0.8) 100%);
    border-radius: 0.5rem;
    transition: all 0.5s ease;
    z-index: 1;
  }

  .hero-cta-border {
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    padding: 1px;
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.4) 0%, 
      rgba(147, 197, 253, 0.2) 50%, 
      rgba(59, 130, 246, 0.4) 100%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    transition: all 0.5s ease;
    z-index: 0;
  }

  .hero-cta-content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .hero-cta-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 
      0 15px 35px rgba(59, 130, 246, 0.2),
      0 5px 15px rgba(30, 41, 59, 0.3);
  }

  .hero-cta-button:hover .hero-cta-bg {
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.2) 0%, 
      rgba(147, 197, 253, 0.1) 50%, 
      rgba(59, 130, 246, 0.2) 100%);
  }

  .hero-cta-button:hover .hero-cta-border {
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.6) 0%, 
      rgba(147, 197, 253, 0.4) 50%, 
      rgba(59, 130, 246, 0.6) 100%);
  }

  /* Enhanced floating particles with navy theme */
  .navy-particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: radial-gradient(circle, rgba(147, 197, 253, 0.7) 0%, transparent 70%);
    border-radius: 50%;
    animation: floatNavyParticle 10s ease-in-out infinite;
  }

  .navy-particle-1 {
    top: 20%;
    left: 15%;
    animation-delay: 0s;
    animation-duration: 8s;
  }

  .navy-particle-2 {
    top: 60%;
    left: 85%;
    animation-delay: 2s;
    animation-duration: 12s;
  }

  .navy-particle-3 {
    top: 40%;
    left: 60%;
    animation-delay: 4s;
    animation-duration: 10s;
  }

  .navy-particle-4 {
    top: 80%;
    left: 25%;
    animation-delay: 6s;
    animation-duration: 14s;
  }

  @keyframes floatNavyParticle {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.4;
    }
    33% {
      transform: translateY(-25px) scale(1.2);
      opacity: 0.8;
    }
    66% {
      transform: translateY(15px) scale(0.9);
      opacity: 0.6;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-title {
      text-shadow: 
        0 0 20px rgba(59, 130, 246, 0.15),
        0 0 40px rgba(30, 41, 59, 0.2);
    }
    
    .hero-cta-button {
      padding: 0.875rem 2rem;
      font-size: 0.8rem;
    }
  }
</style>