---
import { ArrowRight } from 'lucide-astro';
import { hero } from '../../content/home';
---

<section class="relative h-screen flex items-center justify-center overflow-hidden ultra-dark-hero">
  <!-- PERFECTLY centered content with ultra dark background integration -->
  <div class="w-full h-full flex items-center justify-center">
    <div class="w-full max-w-6xl mx-auto px-6">
      <div class="text-center space-y-8 reveal-element">
        <div class="space-y-6">
          <!-- Enhanced badge for ultra dark background -->
          <div class="flex justify-center mb-6">
            <div class="inline-block px-4 py-2 rounded-full bg-[#000012]/80 backdrop-blur-sm border border-white/10 text-white/70 text-xs tracking-widest uppercase ultra-dark-badge">
              <div class="flex items-center justify-center space-x-2">
                <div class="w-1.5 h-1.5 bg-[#FF6B00]/60 rounded-full animate-pulse"></div>
                <span>Advancing Space Communication</span>
                <div class="w-1.5 h-1.5 bg-[#FF6B00]/60 rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
              </div>
            </div>
          </div>
          
          <!-- PERFECTLY centered hero title with ultra dark enhancement -->
          <div class="w-full flex justify-center">
            <h1 class="text-5xl sm:text-6xl md:text-7xl xl:text-8xl font-light tracking-wider leading-none hero-title">
              <div class="logo-style group">
                <span class="text-white inline-block hero-text-1 transition-all duration-500 relative group-hover:text-shadow-ultra-dark">
                  ALBOR
                </span>
                <span class="text-white/30 inline-block ml-4 hero-text-2 transition-colors duration-500 group-hover:text-white/60">SPACE</span>
              </div>
            </h1>
          </div>
          
          <!-- Enhanced description for ultra dark background -->
          <div class="flex justify-center">
            <p class="text-sm md:text-base text-white/60 max-w-md hero-description leading-relaxed mt-8 tracking-wide font-light text-center">
              {hero.description}
            </p>
          </div>
        </div>

        <!-- Enhanced CTA button with ultra dark integration -->
        <div class="pt-10 flex justify-center">
          <a href="#technology" class="hero-cta-button group relative overflow-hidden">
            <div class="hero-cta-bg"></div>
            <div class="hero-cta-border"></div>
            <div class="hero-cta-content">
              <span class="relative z-10">{hero.cta}</span>
              <ArrowRight class="w-5 h-5 ml-2 transition-all duration-500 ease-out transform group-hover:translate-x-2 group-hover:text-[#FF6B00] relative z-10" />
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced floating particles for ultra dark background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="ultra-dark-particle ultra-dark-particle-1"></div>
    <div class="ultra-dark-particle ultra-dark-particle-2"></div>
    <div class="ultra-dark-particle ultra-dark-particle-3"></div>
    <div class="ultra-dark-particle ultra-dark-particle-4"></div>
  </div>
</section>

<style>
  /* Ultra dark hero section with minimal gradients */
  .ultra-dark-hero {
    background: transparent;
    position: relative;
  }

  .ultra-dark-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 60% 40% at center bottom, 
      rgba(0, 0, 36, 0.15) 0%, 
      rgba(0, 0, 24, 0.1) 40%, 
      transparent 80%);
    pointer-events: none;
  }

  /* Enhanced badge for ultra dark background */
  .ultra-dark-badge {
    backdrop-filter: blur(20px);
    box-shadow: 
      0 0 15px rgba(0, 0, 18, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 107, 0, 0.15);
  }

  /* Hero title with ultra dark enhancement */
  .hero-title {
    position: relative;
    transform: translateZ(0);
    letter-spacing: 0.1em;
    line-height: 1.1;
    text-align: center;
    text-shadow: 
      0 0 20px rgba(0, 0, 18, 0.7),
      0 0 40px rgba(0, 0, 24, 0.5);
  }

  .logo-style {
    display: inline-block;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: center;
  }

  .group:hover .group-hover\:text-shadow-ultra-dark {
    text-shadow: 
      0 0 20px rgba(255, 107, 0, 0.6),
      0 0 40px rgba(255, 107, 0, 0.4),
      0 0 60px rgba(255, 107, 0, 0.2);
  }

  /* Text animations enhanced for ultra dark */
  .hero-text-1 {
    animation: textRevealUltraDark 1.5s cubic-bezier(0.77, 0, 0.175, 1) forwards;
    transform: translateX(-25%);
    opacity: 0;
  }

  .hero-text-2 {
    animation: textRevealUltraDark 1.5s cubic-bezier(0.77, 0, 0.175, 1) 0.3s forwards;
    transform: translateX(25%);
    opacity: 0;
  }

  .hero-description {
    animation: fadeInUltraDark 1.5s ease 0.8s forwards;
    opacity: 0;
  }

  @keyframes textRevealUltraDark {
    0% { 
      transform: translateX(25%); 
      opacity: 0; 
    }
    100% { 
      transform: translateX(0); 
      opacity: 1; 
    }
  }

  @keyframes fadeInUltraDark {
    0% { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* Enhanced CTA button for ultra dark background */
  .hero-cta-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    background: transparent;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: white;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUltraDark 1.5s ease 1s forwards;
    opacity: 0;
    backdrop-filter: blur(20px);
  }

  .hero-cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(0, 0, 18, 0.6) 0%, 
      rgba(0, 0, 24, 0.4) 50%, 
      rgba(0, 0, 30, 0.5) 100%);
    border-radius: 0.5rem;
    transition: all 0.5s ease;
    z-index: 1;
  }

  .hero-cta-border {
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    padding: 1px;
    background: linear-gradient(135deg, 
      rgba(255, 107, 0, 0.3) 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      rgba(255, 107, 0, 0.3) 100%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    transition: all 0.5s ease;
    z-index: 0;
  }

  .hero-cta-content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .hero-cta-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 
      0 15px 35px rgba(0, 0, 18, 0.6),
      0 5px 15px rgba(255, 107, 0, 0.2);
  }

  .hero-cta-button:hover .hero-cta-bg {
    background: linear-gradient(135deg, 
      rgba(255, 107, 0, 0.15) 0%, 
      rgba(0, 0, 24, 0.4) 50%, 
      rgba(255, 107, 0, 0.15) 100%);
  }

  .hero-cta-button:hover .hero-cta-border {
    background: linear-gradient(135deg, 
      rgba(255, 107, 0, 0.7) 0%, 
      rgba(255, 255, 255, 0.3) 50%, 
      rgba(255, 107, 0, 0.7) 100%);
  }

  /* Enhanced floating particles for ultra dark background */
  .ultra-dark-particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: radial-gradient(circle, rgba(255, 107, 0, 0.8) 0%, transparent 70%);
    border-radius: 50%;
    animation: floatUltraDarkParticle 15s ease-in-out infinite;
  }

  .ultra-dark-particle-1 {
    top: 30%;
    left: 20%;
    animation-delay: 0s;
    animation-duration: 12s;
  }

  .ultra-dark-particle-2 {
    top: 70%;
    left: 80%;
    animation-delay: 4s;
    animation-duration: 16s;
  }

  .ultra-dark-particle-3 {
    top: 45%;
    left: 75%;
    animation-delay: 8s;
    animation-duration: 14s;
  }

  .ultra-dark-particle-4 {
    top: 65%;
    left: 25%;
    animation-delay: 12s;
    animation-duration: 18s;
  }

  @keyframes floatUltraDarkParticle {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.3;
    }
    33% {
      transform: translateY(-30px) scale(1.4);
      opacity: 0.7;
    }
    66% {
      transform: translateY(20px) scale(0.8);
      opacity: 0.5;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-title {
      text-shadow: 
        0 0 15px rgba(0, 0, 18, 0.8),
        0 0 30px rgba(0, 0, 24, 0.6);
    }
    
    .hero-cta-button {
      padding: 0.875rem 2rem;
      font-size: 0.8rem;
    }
  }
</style>