---
import { ArrowRight } from 'lucide-astro';
import { channelEmulator } from '../../../content/solutions/featured';
import ChannelEmulatorDiagram from './diagrams/ChannelEmulatorDiagram.astro';
---

<div class="glass-card mb-20 overflow-hidden reveal-element">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="p-8 lg:p-10 flex flex-col justify-center">
      <div class="inline-block mb-4 px-3 py-1 rounded-full bg-accent-tertiary/10 text-accent-tertiary text-xs font-medium tracking-widest uppercase">
        Channel Emulator
      </div>
      <h3 class="text-2xl md:text-3xl font-light mb-4">{channelEmulator.title}</h3>
      <p class="text-white/70 mb-6 leading-relaxed">{channelEmulator.description}</p>
      
      <!-- Key Features List -->
      <ul class="space-y-3 mb-8">
        {channelEmulator.features.map(feature => (
          <li class="flex items-start">
            <span class="w-1.5 h-1.5 rounded-full bg-accent-tertiary mt-2 mr-3"></span>
            <span class="text-white/70">{feature}</span>
          </li>
        ))}
      </ul>
      
      <div class="mt-auto">
        <a href="/solutions/sdr" class="secondary-button-blue group">
          <span>Learn More</span>
          <ArrowRight class="w-4 h-4 ml-2 transition-transform duration-300 transform group-hover:translate-x-1" />
        </a>
      </div>
    </div>
    
    <!-- Channel Emulator Diagram -->
    <div class="relative flex items-center justify-center p-4 lg:p-0 overflow-hidden bg-dark-800/30 diagram-container">
      <div class="w-full max-w-xl mx-auto">
        <ChannelEmulatorDiagram />
      </div>
    </div>
  </div>
</div>

<style>
  /* Secondary button styles */
  .secondary-button-blue {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    font-size: 0.875rem;
    color: white;
    background-color: rgba(28, 130, 173, 0.1);
    border: 1px solid rgba(28, 130, 173, 0.3);
    border-radius: 0.25rem;
    transition: all 0.25s ease;
  }
  
  .secondary-button-blue:hover {
    background-color: rgba(28, 130, 173, 0.2);
    border-color: rgba(28, 130, 173, 0.5);
  }
  
  /* Diagram container */
  .diagram-container {
    min-height: 500px;
    border-radius: 0 0.75rem 0.75rem 0;
    overflow: hidden;
    position: relative;
  }
  
  @media (max-width: 1024px) {
    .diagram-container {
      border-radius: 0 0 0.75rem 0.75rem;
    }
  }
  
  /* Glass card styling */
  .glass-card {
    background-color: rgba(26, 26, 46, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 0.75rem;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }
  
  .glass-card:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }
</style>
