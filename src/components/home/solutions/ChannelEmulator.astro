---
import { ArrowRight } from 'lucide-astro';
import { channelEmulator } from '../../../content/solutions/featured';
import ChannelEmulatorDiagram from './diagrams/ChannelEmulatorDiagram.astro';
---

<div class="glass-card mb-12 sm:mb-16 lg:mb-20 overflow-hidden reveal-element">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12">
    <!-- Content Section - Responsive -->
    <div class="p-4 sm:p-6 lg:p-8 xl:p-10 flex flex-col justify-center order-2 lg:order-1">
      <div class="inline-block mb-4 px-3 py-1 rounded-full bg-accent-tertiary/10 text-accent-tertiary text-xs font-medium tracking-widest uppercase">
        Channel Emulator
      </div>
      <h3 class="text-xl sm:text-2xl lg:text-3xl font-light mb-4">{channelEmulator.title}</h3>
      <p class="text-white/70 mb-6 leading-relaxed text-sm sm:text-base">{channelEmulator.description}</p>
      
      <!-- Key Features List - Responsive -->
      <ul class="space-y-3 mb-6 sm:mb-8">
        {channelEmulator.features.map(feature => (
          <li class="flex items-start">
            <span class="w-1.5 h-1.5 rounded-full bg-accent-tertiary mt-2 mr-3 flex-shrink-0"></span>
            <span class="text-white/70 text-sm sm:text-base leading-relaxed">{feature}</span>
          </li>
        ))}
      </ul>
      
      <div class="mt-auto">
        <a href="/solutions/sdr" class="secondary-button-blue group">
          <span class="text-sm sm:text-base">Learn More</span>
          <ArrowRight class="w-4 h-4 ml-2 transition-transform duration-300 transform group-hover:translate-x-1" />
        </a>
      </div>
    </div>
    
    <!-- Diagram Section - Fixed size, responsive container -->
    <div class="diagram-container order-1 lg:order-2">
      <div class="diagram-fixed">
        <ChannelEmulatorDiagram />
      </div>
    </div>
  </div>
</div>

<style>
  /* Secondary button styles - responsive */
  .secondary-button-blue {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.25rem;
    font-weight: 400;
    color: white;
    background-color: rgba(28, 130, 173, 0.1);
    border: 1px solid rgba(28, 130, 173, 0.3);
    border-radius: 0.25rem;
    transition: all 0.25s ease;
  }

  @media (min-width: 640px) {
    .secondary-button-blue {
      padding: 0.75rem 1.5rem;
    }
  }
  
  .secondary-button-blue:hover {
    background-color: rgba(28, 130, 173, 0.2);
    border-color: rgba(28, 130, 173, 0.5);
    transform: translateY(-1px);
  }
</style>