        <path d="M5.5 16.5s-.7-2 2.5-6c0 0 4 4 6-2"></path>
        <path d="M17.5 16.5s.7-2-2.5-6c0 0-4 4-6-2"></path>
      </svg>
      <span class="label">Satellite</span>
    </div>
    
    <!-- Terminals - Positioned for better balance -->
    <div class="terminal terminal-1">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <rect width="20" height="14" x="2" y="3" rx="2"></rect>
        <line x1="8" x2="16" y1="21" y2="21"></line>
        <line x1="12" x2="12" y1="17" y2="21"></line>
      </svg>
      <span class="label">Terminal 1<br/>UE</span>
    </div>
    
    <div class="terminal terminal-3">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <rect width="20" height="14" x="2" y="3" rx="2"></rect>
        <line x1="8" x2="16" y1="21" y2="21"></line>
        <line x1="12" x2="12" y1="17" y2="21"></line>
      </svg>
      <span class="label">Terminal 3<br/>gNodeB</span>
    </div>
    
    <!-- Core Network -->
    <div class="core-network">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <rect width="16" height="6" x="4" y="9" rx="2"></rect>
        <path d="M8 9V5a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v4"></path>
        <path d="M8 15v4a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-4"></path>
