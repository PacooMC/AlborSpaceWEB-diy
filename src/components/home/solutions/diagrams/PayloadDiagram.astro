<div class="payload-diagram">
  <!-- Satellite with Payload -->
  <div class="payload-satellite">
    <div class="satellite-body"></div>
    <div class="solar-panel solar-panel-left"></div>
    <div class="solar-panel solar-panel-right"></div>
    <div class="antenna">
      <div class="antenna-tip"></div>
    </div>
  </div>

  <!-- Signal visualization -->
  <div class="signal-visualization">
    <div class="signal-wave wave-1"></div>
    <div class="signal-wave wave-2"></div>
    <div class="signal-wave wave-3"></div>
  </div>
  
  <!-- Processing flow (horizontal layout) -->
  <div class="processing-flow">
    <div class="processing-step rx">
      <div class="step-icon">RX</div>
      <div class="step-title">Receiver</div>
    </div>
    <div class="flow-arrow"></div>
    <div class="processing-step dp">
      <div class="step-icon">DP</div>
      <div class="step-title">Processor</div>
    </div>
    <div class="flow-arrow"></div>
    <div class="processing-step tx">
      <div class="step-icon">TX</div>
      <div class="step-title">Transmitter</div>
    </div>
  </div>
  
  <!-- Earth representation -->
  <div class="earth">
    <div class="coverage-indicator"></div>
  </div>
  
  <!-- Downlink signal visualization -->
  <div class="downlink">
    <div class="downlink-beam beam-1"></div>
    <div class="downlink-beam beam-2"></div>
    <div class="downlink-beam beam-3"></div>
  </div>
  
  <!-- Technical specifications -->
  <div class="tech-specs">
    <div class="spec">
      <div class="spec-value">1-6 GHz</div>
      <div class="spec-label">Frequency Range</div>
    </div>
    <div class="spec">
      <div class="spec-value">< 10W</div>
      <div class="spec-label">Power</div>
    </div>
    <div class="spec">
      <div class="spec-value">1.3 kg</div>
      <div class="spec-label">Weight</div>
    </div>
  </div>
</div>

<style>
  /* Payload Diagram Styles */
  .payload-diagram {
    position: relative;
    width: 100%;
    height: 480px;
    overflow: hidden;
    background: radial-gradient(circle at center, rgba(233, 69, 96, 0.05) 0%, transparent 70%);
    border: 1px dashed rgba(233, 69, 96, 0.2);
    border-radius: 16px;
  }
  
  /* Satellite with payload */
  .payload-satellite {
    position: absolute;
    top: 15%;
    left: 50%;
    transform: translateX(-50%);
    animation: satelliteFloat 8s ease-in-out infinite;
  }
  
  .satellite-body {
    width: 50px;
    height: 25px;
    background: linear-gradient(180deg, rgba(233, 69, 96, 0.9) 0%, rgba(83, 52, 131, 0.9) 100%);
    border-radius: 4px;
    position: relative;
    box-shadow: 0 0 15px rgba(233, 69, 96, 0.4);
  }
  
  .solar-panel {
    position: absolute;
    top: 7px;
    width: 35px;
    height: 10px;
    background-color: rgba(83, 52, 131, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transform-style: preserve-3d;
  }
  
  .solar-panel-left {
    left: -38px;
    transform: perspective(500px) rotateY(30deg);
  }
  
  .solar-panel-right {
    right: -38px;
    transform: perspective(500px) rotateY(-30deg);
  }
  
  .antenna {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 1px;
    height: 15px;
    background-color: rgba(255, 255, 255, 0.8);
  }
  
  .antenna-tip {
    position: absolute;
    top: -3px;
    left: 50%;
    transform: translateX(-50%);
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background-color: rgba(233, 69, 96, 0.9);
    box-shadow: 0 0 8px rgba(233, 69, 96, 0.8);
    animation: pulseTip 2s ease-in-out infinite;
  }
  
  /* Signal waves visualization */
  .signal-visualization {
    position: absolute;
    top: 15%;
    left: 50%;
    transform: translateX(-50%);
    width: 140px;
    height: 140px;
    border-radius: 50%;
    z-index: -1;
  }
  
  .signal-wave {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(233, 69, 96, 0.2);
    border-radius: 50%;
    opacity: 0;
    transform: scale(0);
    animation: expandWave 4s ease-out infinite;
  }
  
  .wave-2 {
    animation-delay: 1.3s;
  }
  
  .wave-3 {
    animation-delay: 2.6s;
  }
  
  /* Processing flow - three steps in a row */
  .processing-flow {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  
  .processing-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    padding: 10px;
    background-color: rgba(26, 26, 46, 0.6);
    border: 1px solid rgba(233, 69, 96, 0.2);
    border-radius: 8px;
    width: 70px;
  }
  
  .processing-step.rx { animation: highlightStep 6s infinite ease-in-out; }
  .processing-step.dp { animation: highlightStep 6s infinite ease-in-out 2s; }
  .processing-step.tx { animation: highlightStep 6s infinite ease-in-out 4s; }
  
  .step-icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(233, 69, 96, 0.7), rgba(83, 52, 131, 0.7));
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 600;
    color: white;
  }
  
  .step-title {
    font-size: 0.65rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .flow-arrow {
    width: 20px;
    height: 2px;
    background-color: rgba(233, 69, 96, 0.5);
    position: relative;
  }
  
  .flow-arrow:after {
    content: '';
    position: absolute;
    right: 0;
    top: -3px;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 4px 0 4px 6px;
    border-color: transparent transparent transparent rgba(233, 69, 96, 0.5);
  }
  
  /* Earth and downlink */
  .earth {
    position: absolute;
    bottom: 15%;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, rgba(28, 130, 173, 0.6), rgba(233, 69, 96, 0.2));
    box-shadow: 0 0 15px rgba(28, 130, 173, 0.3);
    overflow: hidden;
  }
  
  .coverage-indicator {
    position: absolute;
    top: 15%;
    left: 25%;
    width: 50%;
    height: 50%;
    border-radius: 50%;
    background-color: rgba(233, 69, 96, 0.2);
    filter: blur(3px);
    animation: pulse 4s ease-in-out infinite;
  }
  
  .downlink {
    position: absolute;
    top: 60%;
    left: 0;
    width: 100%;
    height: 25%;
    z-index: -1;
  }
  
  .downlink-beam {
    position: absolute;
    top: 0;
    left: 50%;
    width: 1px;
    height: 100%;
    background: linear-gradient(to bottom, rgba(233, 69, 96, 0.8), rgba(233, 69, 96, 0.1));
    transform-origin: top center;
  }
  
  .beam-1 {
    transform: translateX(-50%) rotate(-15deg);
    opacity: 0.6;
  }
  
  .beam-2 {
    transform: translateX(-50%) rotate(0deg);
    opacity: 0.8;
  }
  
  .beam-3 {
    transform: translateX(-50%) rotate(15deg);
    opacity: 0.6;
  }
  
  /* Technical specifications */
  .tech-specs {
    position: absolute;
    bottom: 15%;
    right: 8%;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .spec {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  
  .spec-value {
    font-size: 0.8rem;
    font-weight: 500;
    color: rgba(233, 69, 96, 0.9);
  }
  
  .spec-label {
    font-size: 0.65rem;
    color: rgba(255, 255, 255, 0.6);
  }
  
  /* Animations for payload diagram */
  @keyframes satelliteFloat {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-8px); }
  }
  
  @keyframes pulseTip {
    0%, 100% { opacity: 0.7; transform: translateX(-50%) scale(1); }
    50% { opacity: 1; transform: translateX(-50%) scale(1.3); }
  }
  
  @keyframes expandWave {
    0% { transform: scale(0); opacity: 0.8; }
    70% { opacity: 0.1; }
    100% { transform: scale(1); opacity: 0; }
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }
  
  @keyframes highlightStep {
    0%, 40%, 100% { 
      border-color: rgba(233, 69, 96, 0.2);
      box-shadow: none;
    }
    10%, 30% { 
      border-color: rgba(233, 69, 96, 0.6);
      box-shadow: 0 0 15px rgba(233, 69, 96, 0.3);
    }
  }
</style>
