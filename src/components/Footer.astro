---
import Logo from './Logo.astro';
import { footerData } from '../content/footer';
---

<footer class="border-t border-[#FF6B00]/8 pt-16 pb-10 relative overflow-hidden">
  <!-- Enhanced background effects with minimalist approach -->
  <div class="absolute inset-0 bg-[#000012] opacity-80"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-[#000012] to-transparent opacity-40"></div>

  <!-- Minimalist glow effects -->
  <div class="absolute bottom-0 left-1/3 -translate-x-1/2 w-1/3 h-40 bg-[#FF6B00]/8 blur-3xl rounded-full opacity-40 animate-pulse-slow"></div>
  <div class="absolute bottom-20 right-1/4 w-1/4 h-30 bg-[#FF6B00]/6 blur-3xl rounded-full opacity-30" style="animation: pulse 4s ease-in-out infinite;"></div>

  <div class="container-custom relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Logo and company info -->
      <div class="space-y-6">
        <a href="/">
          <Logo className="mb-4" />
        </a>
        <p class="text-sm text-white/60 leading-relaxed max-w-xs">
          Advancing space communication technology for the next frontier of human exploration.
        </p>
      </div>

      <!-- Solutions Links with minimalist hover effects -->
      <div class="space-y-6">
        <h3 class="text-sm font-medium tracking-wider text-white/70 uppercase relative inline-block">
          Solutions
          <span class="absolute -bottom-1 left-0 w-8 h-px bg-gradient-to-r from-[#FF6B00]/40 to-[#FF6B00]/20"></span>
        </h3>
        <ul class="space-y-3">
          {footerData.solutions.map(item => (
            <li>
              <a
                href={item.url}
                class="text-sm text-white/50 hover:text-white transition-colors duration-200 flex items-center group"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-[#FF6B00]/40 mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
                <span class="transform translate-x-0 group-hover:translate-x-1 transition-transform duration-200">{item.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links with minimalist hover effects -->
      <div class="space-y-6">
        <h3 class="text-sm font-medium tracking-wider text-white/70 uppercase relative inline-block">
          Company
          <span class="absolute -bottom-1 left-0 w-8 h-px bg-gradient-to-r from-[#FF6B00]/40 to-[#FF6B00]/20"></span>
        </h3>
        <ul class="space-y-3">
          {footerData.company.map(item => (
            <li>
              <a
                href={item.url}
                class="text-sm text-white/50 hover:text-white transition-colors duration-200 flex items-center group"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-[#FF6B00]/40 mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
                <span class="transform translate-x-0 group-hover:translate-x-1 transition-transform duration-200">{item.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect Links with minimalist hover effects -->
      <div class="space-y-6">
        <h3 class="text-sm font-medium tracking-wider text-white/70 uppercase relative inline-block">
          Connect
          <span class="absolute -bottom-1 left-0 w-8 h-px bg-gradient-to-r from-[#FF6B00]/40 to-[#FF6B00]/20"></span>
        </h3>
        <ul class="space-y-3">
          {footerData.connect.map(item => (
            <li>
              <a
                href={item.url}
                class="text-sm text-white/50 hover:text-white transition-colors duration-200 flex items-center group"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-[#FF6B00]/40 mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
                <span class="transform translate-x-0 group-hover:translate-x-1 transition-transform duration-200">{item.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright with minimalist styling -->
    <div class="mt-16 pt-8 border-t border-[#FF6B00]/8">
      <p class="text-center text-sm text-white/40 hover:text-white/60 transition-colors duration-300">{footerData.copyright}</p>
    </div>
  </div>
</footer>