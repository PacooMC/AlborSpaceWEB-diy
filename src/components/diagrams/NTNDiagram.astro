---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class="w-full h-full flex items-center justify-center p-4">
  <div class="relative w-full max-w-4xl">
    <!-- Background glow effect -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full bg-gradient-to-br from-emerald-500/10 to-teal-500/10 rounded-full blur-[120px]"></div>
    
    <!-- Orchestrator at the top -->
    <div class="absolute -top-12 left-1/2 -translate-x-1/2 z-20">
      <div class="bg-[#1a1b2e]/80 p-4 rounded-xl border border-emerald-500/30 shadow-lg">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-emerald-400" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3 3h18c1.1 0 2 .9 2 2v14c0 1.1-.9 2-2 2H3c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2zm0 16h18V5H3v14zM15 7h2v2h-2V7zm-4 0h2v2h-2V7zM7 7h2v2H7V7z"/>
          </svg>
          <div>
            <h3 class="text-emerald-400 font-medium">Network Service Orchestrator</h3>
            <p class="text-gray-400 text-sm">VNF Placement & Migration</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content area with satellite and ground segments -->
    <div class="mt-24 grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Satellite Segment -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-b from-emerald-500/5 to-transparent rounded-2xl"></div>
        <div class="relative p-6 border border-emerald-500/20 rounded-2xl">
          <h4 class="text-emerald-400 mb-4 flex items-center gap-2">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5 15.5l7-3.5 7 3.5v2l-7-3.5L5 17.5v-2zM12 13.5L5 17v-2l7-3.5 7 3.5v2l-7-3.5z"/>
            </svg>
            Satellite Segment
          </h4>
          
          <!-- VNF Container -->
          <div class="bg-[#1a1b2e]/50 p-4 rounded-xl border border-emerald-500/20 mb-4">
            <div class="flex items-center justify-between mb-3">
              <span class="text-gray-300 text-sm">Active VNFs</span>
              <span class="text-emerald-400 text-sm">4/4 Slots</span>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <div class="vnf-box">gNB-CU</div>
              <div class="vnf-box">UPF</div>
              <div class="vnf-box">gNB-DU</div>
              <div class="vnf-box">AMF-1</div>
            </div>
          </div>

          <!-- Resource Metrics -->
          <div class="grid grid-cols-3 gap-3">
            <div class="metric">
              <div class="h-16 w-1.5 bg-gradient-to-t from-emerald-500/20 to-teal-500/20 rounded-full relative overflow-hidden mx-auto">
                <div class="absolute bottom-0 left-0 right-0 h-[85%] bg-gradient-to-t from-emerald-500 to-teal-500 rounded-full animate-pulse"></div>
              </div>
              <span class="text-gray-400 text-xs mt-2">CPU</span>
            </div>
            <div class="metric">
              <div class="h-16 w-1.5 bg-gradient-to-t from-emerald-500/20 to-teal-500/20 rounded-full relative overflow-hidden mx-auto">
                <div class="absolute bottom-0 left-0 right-0 h-[90%] bg-gradient-to-t from-emerald-500 to-teal-500 rounded-full animate-pulse"></div>
              </div>
              <span class="text-gray-400 text-xs mt-2">Memory</span>
            </div>
            <div class="metric">
              <div class="h-16 w-1.5 bg-gradient-to-t from-emerald-500/20 to-teal-500/20 rounded-full relative overflow-hidden mx-auto">
                <div class="absolute bottom-0 left-0 right-0 h-[75%] bg-gradient-to-t from-emerald-500 to-teal-500 rounded-full animate-pulse"></div>
              </div>
              <span class="text-gray-400 text-xs mt-2">Storage</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Ground Segment -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-b from-teal-500/5 to-transparent rounded-2xl"></div>
        <div class="relative p-6 border border-teal-500/20 rounded-2xl">
          <h4 class="text-teal-400 mb-4 flex items-center gap-2">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
            </svg>
            Ground Segment
          </h4>
          
          <!-- VNF Container -->
          <div class="bg-[#1a1b2e]/50 p-4 rounded-xl border border-teal-500/20 mb-4">
            <div class="flex items-center justify-between mb-3">
              <span class="text-gray-300 text-sm">Active VNFs</span>
              <span class="text-teal-400 text-sm">3/4 Slots</span>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <div class="vnf-box">AMF-2</div>
              <div class="vnf-box">gNB-DU</div>
              <div class="vnf-box">UPF</div>
              <div class="vnf-box empty">Available</div>
            </div>
          </div>

          <!-- Resource Metrics -->
          <div class="grid grid-cols-3 gap-3">
            <div class="metric">
              <div class="h-16 w-1.5 bg-gradient-to-t from-teal-500/20 to-emerald-500/20 rounded-full relative overflow-hidden mx-auto">
                <div class="absolute bottom-0 left-0 right-0 h-[60%] bg-gradient-to-t from-teal-500 to-emerald-500 rounded-full animate-pulse"></div>
              </div>
              <span class="text-gray-400 text-xs mt-2">CPU</span>
            </div>
            <div class="metric">
              <div class="h-16 w-1.5 bg-gradient-to-t from-teal-500/20 to-emerald-500/20 rounded-full relative overflow-hidden mx-auto">
                <div class="absolute bottom-0 left-0 right-0 h-[55%] bg-gradient-to-t from-teal-500 to-emerald-500 rounded-full animate-pulse"></div>
              </div>
              <span class="text-gray-400 text-xs mt-2">Memory</span>
            </div>
            <div class="metric">
              <div class="h-16 w-1.5 bg-gradient-to-t from-teal-500/20 to-emerald-500/20 rounded-full relative overflow-hidden mx-auto">
                <div class="absolute bottom-0 left-0 right-0 h-[65%] bg-gradient-to-t from-teal-500 to-emerald-500 rounded-full animate-pulse"></div>
              </div>
              <span class="text-gray-400 text-xs mt-2">Storage</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- VNF Migration Arrows -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-24 pointer-events-none">
      <div class="migration-arrow migration-arrow-up"></div>
      <div class="migration-arrow migration-arrow-down" style="animation-delay: 2s"></div>
    </div>
  </div>
</div>

<style>
  .vnf-box {
    @apply bg-[#1a1b2e]/80 p-2 rounded-lg text-center text-sm text-emerald-400 border border-emerald-500/20;
  }

  .vnf-box.empty {
    @apply text-gray-500 border-gray-700/20;
  }

  .metric {
    @apply flex flex-col items-center text-center;
  }

  .migration-arrow {
    @apply absolute w-8 h-8 left-1/2 -translate-x-1/2;
    animation: migrate 4s infinite;
  }

  .migration-arrow-up {
    background: linear-gradient(to bottom, rgba(16, 185, 129, 0.5), transparent);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
    top: 0;
  }

  .migration-arrow-down {
    background: linear-gradient(to top, rgba(20, 184, 166, 0.5), transparent);
    clip-path: polygon(50% 100%, 0% 0%, 100% 0%);
    bottom: 0;
  }

  @keyframes migrate {
    0%, 100% {
      opacity: 0;
      transform: translateX(-50%) translateY(0);
    }
    50% {
      opacity: 1;
      transform: translateX(-50%) translateY(20px);
    }
  }
</style>
