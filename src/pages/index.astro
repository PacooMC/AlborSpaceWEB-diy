---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import Technology from '../components/home/Technology.astro';
import Solutions from '../components/home/Solutions.astro';
import TeamPreview from '../components/home/TeamPreview.astro';
---

<Layout title="ALBOR SPACE - Advanced Satellite Communication Systems">
  <!-- Enhanced Home Page with space theme and smooth transitions -->
  <div class="space-page">
    <!-- Hero Section with deep space atmosphere -->
    <section class="section hero-section relative">
      <Hero />
      <!-- Subtle section divider -->
      <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-slate-600/30 to-transparent"></div>
    </section>

    <!-- Technology Section with smooth transition -->
    <section class="section tech-section relative">
      <div class="absolute top-0 left-0 right-0 h-24 bg-gradient-to-b from-slate-900/20 via-slate-800/10 to-transparent"></div>
      <Technology />
      <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-2/3 h-px bg-gradient-to-r from-transparent via-slate-600/20 to-transparent"></div>
    </section>

    <!-- Solutions Section with enhanced transitions -->
    <section class="section solutions-section relative">
      <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-slate-900/15 via-slate-800/8 to-transparent"></div>
      <Solutions />
      <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-3/4 h-px bg-gradient-to-r from-transparent via-slate-600/25 to-transparent"></div>
    </section>

    <!-- Team Preview Section with space accent -->
    <section class="section team-section relative">
      <div class="absolute top-0 left-0 right-0 h-40 bg-gradient-to-b from-slate-900/10 via-slate-800/5 to-transparent"></div>
      <TeamPreview />
      <!-- Final subtle divider -->
      <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-full h-px bg-gradient-to-r from-transparent via-slate-600/15 to-transparent"></div>
    </section>
  </div>
</Layout>

<style is:global>
  /* Enhanced space page styling */
  .space-page {
    position: relative;
    background: transparent;
  }

  /* Enhanced section styling with space theme */
  .section {
    position: relative;
    padding: 3rem 0;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hero section specific styling */
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: radial-gradient(ellipse 80% 40% at center bottom, 
      rgba(255, 140, 0, 0.02) 0%, 
      rgba(255, 165, 0, 0.01) 40%, 
      transparent 80%);
  }

  /* Technology section with subtle space accent */
  .tech-section {
    background: linear-gradient(to bottom, 
      transparent 0%, 
      rgba(51, 65, 85, 0.05) 50%, 
      transparent 100%);
  }

  /* Solutions section with enhanced space atmosphere */
  .solutions-section {
    background: radial-gradient(ellipse 100% 50% at center, 
      rgba(30, 41, 59, 0.08) 0%, 
      rgba(51, 65, 85, 0.03) 60%, 
      transparent 100%);
  }

  /* Team section with subtle space undertones */
  .team-section {
    background: linear-gradient(to bottom, 
      transparent 0%, 
      rgba(30, 41, 59, 0.05) 30%, 
      rgba(51, 65, 85, 0.08) 70%, 
      rgba(30, 41, 59, 0.05) 100%);
  }

  /* Enhanced animations with space theme */
  .slide-left {
    animation: slideInLeft 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.2s;
  }
  
  .slide-right {
    animation: slideInRight 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.2s;
  }
  
  @keyframes slideInLeft {
    0% {
      opacity: 0;
      transform: translateX(-50px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes slideInRight {
    0% {
      opacity: 0;
      transform: translateX(50px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes fadeIn {
    0% { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
  
  /* Enhanced reveal elements with space touches */
  .heading-lg {
    font-weight: 300;
    letter-spacing: -0.03em;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .heading-lg::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(71, 85, 105, 0.4), transparent);
    transition: width 1s ease 0.5s;
  }
  
  .heading-lg.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .heading-lg.revealed::after {
    width: 60px;
  }
  
  .reveal-element {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .reveal-element.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Enhanced glass effects with space theme */
  .glass-card {
    position: relative;
    overflow: hidden;
    background-color: rgba(30, 41, 59, 0.2);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .glass-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(71, 85, 105, 0.4), transparent);
    transition: left 0.8s ease;
  }

  .glass-card:hover::before {
    left: 100%;
  }

  .glass-card:hover {
    border-color: rgba(255, 140, 0, 0.1);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Enhanced reveal animation with staggered delays
    const revealElements = document.querySelectorAll('.reveal-element');
    const headings = document.querySelectorAll('.heading-lg');
    
    // Create intersection observer for smoother animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          const delay = entry.target.getAttribute('data-reveal-delay') || (index * 100);
          setTimeout(() => {
            entry.target.classList.add('revealed');
          }, parseInt(delay));
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    // Observe all reveal elements
    [...revealElements, ...headings].forEach(el => {
      observer.observe(el);
    });

    // Enhanced space effect on page load
    const spaceElements = document.querySelectorAll('.section');
    spaceElements.forEach((section, index) => {
      setTimeout(() => {
        section.classList.add('section-loaded');
      }, index * 200);
    });

    // Add smooth scroll behavior
    document.documentElement.style.scrollBehavior = 'smooth';
  });
</script>
</Layout>